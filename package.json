{
  "name": "michaelgira.me",
  "version": "3.0.0",
  "description": "My personal website",
  "main": "server.ts",
  "scripts": {
    "start": "run-p watch server:dev",
    "server": "ts-node server.ts",
    "server:dev": "nodemon",
    "test": "npm run lint",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "build": "npm run clean && parcel build ./src/pages/**/*.ejs",
    "watch": "parcel watch ./src/pages/**/*.ejs",
    "clean": "rimraf dist/* && rimraf .cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelgira23/michaelgira.me-v2.git"
  },
