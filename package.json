  "bugs": {
    "url": "https://github.com/michaelgira23/michaelgira.me-v2/issues"
  },
  "homepage": "https://github.com/michaelgira23/michaelgira.me-v2#readme",
  "dependencies": {
    "@types/express": "^4.16.0",
    "animejs": "^2.2.0",
    "devicon": "^2.0.0",
    "express": "^4.16.3",
    "sanitize.css": "^6.0.0",
    "ts-node": "^7.0.0"
  },
  "devDependencies": {
    "@types/animejs": "^2.0.0",
    "@types/node": "^10.5.2",
    "node-sass": "^4.9.2",
    "nodemon": "^1.18.2",
